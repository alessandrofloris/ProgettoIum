<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat"
    android:theme="@style/Theme.BottomAppBar">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Messaggi"
                android:textSize="18dp"
                android:layout_margin="15dp"
                />

          <!-- ARTISTA 1 -->
            <LinearLayout
                android:id="@+id/profileButton1"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                        android:id="@+id/profileView1"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/artist_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/artist_chat1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp" />

                </LinearLayout>
            </LinearLayout>



            <!-- ARTISTA 2 -->

            <LinearLayout
                android:id="@+id/profileButton2"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                        android:id="@+id/profileView2"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/artist_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/artist_chat2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp" />

                </LinearLayout>
            </LinearLayout>


            <!-- ARTISTA 3 -->

            <LinearLayout
                android:id="@+id/profileButton3"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                        android:id="@+id/profileView3"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/artist_name3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/artist_chat3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <include layout="@layout/bottom_nav_bar"
        android:id="@+id/bottom_menu"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>